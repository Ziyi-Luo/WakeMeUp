<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HTTP Info"
        android:visibility="gone"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:layout_gravity="bottom" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:background="@drawable/button_edge"
        android:weightSum="1"
        android:layout_weight="0.09">


        <TextView
            android:layout_width="120sp"
            android:layout_height="match_parent"
            android:id="@+id/alarmTime"
            android:text="@string/alarmTime"
            android:background="#2b2a2a"
            android:enabled="true"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#37af24"
            android:fontFamily="sans-serif"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:clickable="true" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.11"
            android:gravity="center_vertical"
            android:id="@+id/alarmmode">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rb_wakemeup"
                android:id="@+id/rb_wakemeup"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rb_normal"
                android:id="@+id/rb_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_interval"
                android:id="@+id/txt_interval"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="bottom" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/interval"
                android:id="@+id/interval"
                android:textStyle="bold"
                android:background="#2b2a2a"
                android:enabled="true"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#37af24"
                android:clickable="true" />



        </RadioGroup>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom" />

        <Button
            android:id="@+id/btn_start_alarm"
            android:layout_width="110dp"
            android:background="@drawable/button_edge"
            android:layout_height="match_parent"
            android:text="@string/btn_start_alarm" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_set_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_set_ip" />


</LinearLayout>